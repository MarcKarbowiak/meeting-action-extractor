{
  "name": "meeting-action-extractor",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@10.6.2",
  "scripts": {
    "dev": "pnpm --filter @meeting-action-extractor/api dev",
    "dev:worker": "pnpm --filter @meeting-action-extractor/worker dev",
    "dev:web": "pnpm --filter @meeting-action-extractor/web dev",
    "store:seed": "pnpm --filter @meeting-action-extractor/db seed",
    "worker:once": "pnpm --filter @meeting-action-extractor/worker once",
    "test:clean": "node ./scripts/clean-test-data.mjs",
    "test": "pnpm test:clean && pnpm -r --if-present test",
    "e2e:prep": "pnpm test:clean && pnpm store:seed",
    "e2e": "pnpm e2e:prep && playwright test",
    "lint": "pnpm -r --if-present lint",
    "typecheck": "pnpm -r --if-present typecheck",
    "ci": "pnpm lint && pnpm typecheck && pnpm test",
    "format": "prettier --write ."
  },
  "devDependencies": {
    "@types/node": "^24.3.0",
    "@typescript-eslint/eslint-plugin": "^8.25.0",
    "@typescript-eslint/parser": "^8.25.0",
    "@playwright/test": "^1.52.0",
    "eslint": "^9.20.1",
    "eslint-config-prettier": "^10.0.1",
    "prettier": "^3.5.2",
    "tsx": "^4.20.3",
    "typescript": "^5.8.2",
    "vitest": "^3.2.4"
  }
}
